<idea-plugin>
    <id>org.example.intellij-recon</id>
    <name>IntelliJ-Recon</name>
    <vendor email="developers info@swim.ai" url="https://www.swim.ai/">Swim.AI</vendor>

    <description><![CDATA[Recon language support.
                    Recon is object notation with attributes, like if JSON and XML had a baby.]]>
    </description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Recon File" implementationClass="org.swim.language.ReconFileType"
                  fieldName="INSTANCE" language="Recon" extensions="recon"/>

        <lang.parserDefinition language="Recon"
                  implementationClass="org.swim.language.ReconParserDefinition"/>

        <lang.syntaxHighlighterFactory language="Recon"
                   implementationClass="org.swim.language.ReconSyntaxHighlighterFactory"/>

        <colorSettingsPage implementation="org.swim.language.ReconColorSettingPage"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>